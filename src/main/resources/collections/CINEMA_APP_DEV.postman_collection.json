		{
			"name": "Auth",
			"item": [
				{
					"name": "login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"const authHeader = pm.response.headers.get(\"Authorization\");\r",
									"\r",
									"if (authHeader && authHeader.startsWith(\"Bearer \")) {\r",
									"    const token = authHeader.replace(\"Bearer \", \"\");\r",
									"    pm.environment.set(\"init_token\", token); // O pm.globals.set(...) si prefieres global\r",
									"    console.log(\"✅ Token guardado:\", token);\r",
									"} else {\r",
									"    console.log(\"❌ No se encontró el header Authorization.\");\r",
									"}\r",
									""
								],
								"type": "text/javascript",
								"packages": {}
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\r\n  \"username\": \"admin\",\r\n  \"password\": \"123456\"\r\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/api/v1/auth/login",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"v1",
								"auth",
								"login"
							]
						}
					},
					"response": []
				},
				{
					"name": "login-body",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Obtener el token desde la respuesta del body JSON\r",
									"let response = pm.response.json();\r",
									"if (response.token) {\r",
									"    // Guardar token como variable de entorno (o usa global si prefieres)\r",
									"    pm.environment.set(\"access_token\", response.token);\r",
									"    console.log(\"✅ Nuevo token guardado:\", response.token);\r",
									"} else {\r",
									"    console.warn(\"⚠️ No se encontró token en la respuesta.\");\r",
									"}\r",
									""
								],
								"type": "text/javascript",
								"packages": {}
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{init_token}}",
